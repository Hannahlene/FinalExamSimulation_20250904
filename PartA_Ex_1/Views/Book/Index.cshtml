@model IEnumerable<FinalExamSimulation_20250904.PartA_Ex_1.Models.Book>

@{
    ViewData["Title"] = "Book List";
}

<h2 class="text-center">ðŸ“š Book List</h2>
@if (ViewBag.DiscountPercent != null)
{
    <p class="text-success text-center">Discount applied: @ViewBag.DiscountPercent%</p>
}

<table class="table table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Price ($)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Title</td>
                <td>@b.Author</td>
                <td>@b.Price.ToString("0.00")</td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="Discount" method="post" class="mt-3">
    <div class="form-group">
        <label>Enter Discount Percentage:</label>
        <input type="number" step="1" name="percent" class="form-control" placeholder="e.g. 15" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Apply Discount</button>
</form>